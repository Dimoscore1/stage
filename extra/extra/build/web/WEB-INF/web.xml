<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>Vinci IEP</display-name>
	<!-- *********************************************************** FILTER -->
	<filter>
		<filter-name>ExceptionFilter</filter-name>
		<filter-class>com.vinci.iep.filter.ExceptionFilter</filter-class>
	</filter>
	<filter>
		<filter-name>HibernateFilter</filter-name>
		<filter-class>fr.smile.hibernate.HibernateFilter</filter-class>
	</filter>
	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>fr.smile.security.AuthenticationFilter</filter-class>
		<init-param>
			<param-name>authentication.realm</param-name>
			<param-value>VINCI.GDC</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>BenchFilter</filter-name>
		<filter-class>fr.smile.bench.BenchFilter</filter-class>
	</filter>
	<filter>
		<filter-name>ActionMessageUtils</filter-name>
		<filter-class>com.vinci.utils.ActionMessageUtils</filter-class>
	</filter>
	<filter>
	    <filter-name>struts2</filter-name>
	    <filter-class>org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>
	<filter>
		<filter-name>ResponseHeaderFilter</filter-name>
		<filter-class>fr.smile.filter.ResponseHeaderFilter</filter-class>
		<init-param>
			<param-name>Cache-Control</param-name>
			<param-value>max-age=3600</param-value>
		</init-param>
		<init-param>
			<param-name>Expires</param-name>
			<param-value>6000</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>ResponseHeaderServicesFilter</filter-name>
		<filter-class>fr.smile.filter.ResponseHeaderFilter</filter-class>
		<init-param>
			<param-name>Cache-Control</param-name>
			<param-value>no-cache</param-value>
		</init-param>
		<init-param>
			<param-name>Expires</param-name>
			<param-value>-1</param-value>
		</init-param>
		<init-param>
			<param-name>Pragma</param-name>
			<param-value>no-cache</param-value>
		</init-param>		
	</filter>	
	<filter>
		<filter-name>UtilisateurFilter</filter-name>
		<filter-class>com.vinci.iep.filter.UtilisateurFilter</filter-class>
	</filter>
	<filter>
		<filter-name>NavigationManager</filter-name>
		<filter-class>com.vinci.iep.filter.NavigationManager</filter-class>
	</filter>
	<filter>
		<filter-name>OSCacheFilterSession</filter-name>
		<filter-class>com.opensymphony.oscache.web.filter.CacheFilter</filter-class>
		<init-param>
			<param-name>time</param-name>
			<param-value>7200</param-value>
		</init-param>
		<init-param>
			<param-name>scope</param-name>
			<param-value>session</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>OSCacheFilterApplication</filter-name>
		<filter-class>com.opensymphony.oscache.web.filter.CacheFilter</filter-class>
		<init-param>
			<param-name>time</param-name>
			<param-value>7200</param-value>
		</init-param>
		<init-param>
			<param-name>scope</param-name>
			<param-value>application</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>com.vinci.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<!-- *************************************************** FILTER-MAPPING -->
	<filter-mapping>
		<filter-name>ExceptionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>NavigationManager</filter-name>
		<url-pattern>/saisiereste/edit.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>NavigationManager</filter-name>
		<url-pattern>/saisiereste/view.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>NavigationManager</filter-name>
		<url-pattern>/services/commandes/restes</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>NavigationManager</filter-name>
		<url-pattern>/pointage/view.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>NavigationManager</filter-name>
		<url-pattern>/pointage/edit.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>NavigationManager</filter-name>
		<url-pattern>/services/personnels/searchpresent</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>NavigationManager</filter-name>
		<url-pattern>/pointage/editSection.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>NavigationManager</filter-name>
		<url-pattern>/services/admin/interimaire</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>BenchFilter</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>BenchFilter</filter-name>
		<url-pattern>*.json</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>BenchFilter</filter-name>
		<url-pattern>/services/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>HibernateFilter</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>HibernateFilter</filter-name>
		<url-pattern>*.json</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>HibernateFilter</filter-name>
		<url-pattern>/services/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/services/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResponseHeaderFilter</filter-name>
		<url-pattern>/img/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResponseHeaderFilter</filter-name>
		<url-pattern>/imgCorp/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResponseHeaderFilter</filter-name>
		<url-pattern>/css/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResponseHeaderFilter</filter-name>
		<url-pattern>/cssCorp/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResponseHeaderFilter</filter-name>
		<url-pattern>/js/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResponseHeaderFilter</filter-name>
		<url-pattern>/jsCorp/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResponseHeaderFilter</filter-name>
		<url-pattern>/menu/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>OSCacheFilterSession</filter-name>
		<url-pattern>/menu/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>OSCacheFilterApplication</filter-name>
		<url-pattern>/js/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>OSCacheFilterApplication</filter-name>
		<url-pattern>/jsCorp/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ActionMessageUtils</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>UtilisateurFilter</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>UtilisateurFilter</filter-name>
		<url-pattern>/services/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ResponseHeaderServicesFilter</filter-name>
		<url-pattern>/services/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<!-- ********************************************************* LISTENER -->
	<listener>
		<listener-class>fr.smile.log.Log4jInitializer</listener-class>
	</listener>
	<listener>
		<listener-class>fr.smile.contextparam.ContextParam</listener-class>
	</listener>
	<listener>
		<listener-class>org.apache.struts2.tiles.StrutsTilesListener</listener-class>
	</listener>
	<listener>
		<listener-class>fr.smile.velocity.VelocityInitializer</listener-class>
	</listener>
	<!-- ************************************************* RESTLET/SERVLETS -->
	<context-param>
		<param-name>org.restlet.application</param-name>
		<param-value>com.vinci.iep.rest.RestletApplication</param-value>
	</context-param>
	<servlet>
		<servlet-name>ServerServlet</servlet-name>
		<servlet-class>com.vinci.rest.ServerServlet</servlet-class>
	</servlet>
	<servlet>
	  	<servlet-name>ServletStartBirt</servlet-name>
	  	<servlet-class>com.vinci.iep.struts.servlet.ServletStartBirt</servlet-class>
	  	<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
	  	<servlet-name>ServletStartTimer</servlet-name>
	  	<servlet-class>com.vinci.iep.struts.servlet.ServletStartTimer</servlet-class>
	  	<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServerServlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	  	<servlet-name>ServletStartBirt</servlet-name>
	  	<url-pattern>/ServletStartBirt</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	  	<servlet-name>ServletStartTimer</servlet-name>
	  	<url-pattern>/StartTimer</url-pattern>
	</servlet-mapping>
	<!-- *************************************************** SESSION-CONFIG -->
	<session-config>
		<session-timeout>120</session-timeout>
	</session-config>
	<!-- ******************************************************* JSP-CONFIG -->
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<page-encoding>UTF-8</page-encoding>
		</jsp-property-group>
	</jsp-config>
	<!-- ************************************************ WELCOME-FILE-LIST -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<!-- ******************************************************* ERROR PAGE -->
	<error-page>
		<error-code>401</error-code>
		<location>/accessDenied.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/accessError.jsp</location>
	</error-page>

	<resource-ref>
		<res-ref-name>wm/MyWorkManager</res-ref-name>
		<res-type>commonj.work.WorkManager</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
	
</web-app>